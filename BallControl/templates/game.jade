extends ./layout/app.jade

block styles
    style.
        body {
            padding: 0;
            margin: 0;
        }

        .instructions {
            text-align: center;
            margin-top: 40px;
            font-size: 2em;
        }

        .ball {
            position: absolute;
            width: 100px;
            height: 100px;
            border-radius: 100%;
            background: #000;
            display: none;
            top: 100px;
            left: 100px;
        }

